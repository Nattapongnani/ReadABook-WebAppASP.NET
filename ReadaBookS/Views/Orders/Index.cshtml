@model IEnumerable<ReadaBookS.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNet.Identity
@using ReadaBookS.Models;

@if (User.Identity.IsAuthenticated)
{
    @Html.AntiForgeryToken()
    var manager = new UserManager<ApplicationUser>(new Microsoft.AspNet.Identity.EntityFramework.UserStore<ApplicationUser>(new ApplicationDbContext()));
    var currentUser = manager.FindById(User.Identity.GetUserId());




    <style>

        .container3 {
            background-color: #4e46bd;
            height: 300px;
            width: 960px;
            margin: 0 auto;
            position: relative;
        }

        .wrapper {
            height: 100px;
            width: 100px;
            position: absolute;
            top: 30px;
            right: 50px;
        }


        .button {
            text-align: right;
            padding-bottom: 130px;
            position: relative;
        }

        .profile {
            height: 200px;
            width: 200px;
            position: absolute;
            margin-top: 230%;
            margin-left: -540%;
            top: 50%;
            left: 200%;
            transform: translate(-50%,-50%);
            overflow: hidden;
            border-radius: 50%;
            border: 5px solid #fff;
        }
        .name {
            position: absolute;
            margin-top: 400px;
            margin-left: -380px;
            
        }

        p {
            text-align: center;
            font-family: sans-serif;
            font-size: 23px;
        }

    </style>

    <div style="background-color: black;">
        <div class="container3" style="background-color: black;">
            <div class="wrapper">
            
                <div class="profile">
                    <img id="photo" src=@Url.Content("Content/images/profile/"+currentUser.Url) />
                

                </div>
                <div class="name">
                    <p>@currentUser.Fname</p>
                </div>

            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 200px; margin-bottom: 200px;">
        <h2>Your Order</h2>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.user_email)
                </th>
                <th>
                    <b>Book Name</b>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Start_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.End_date)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.user_email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.o_BookName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.day)
                    </td>
                    <td style="color: limegreen;">
                        @Html.DisplayFor(modelItem => item.Start_date)
                    </td>
                    <td style="color: red;">
                        @Html.DisplayFor(modelItem => item.End_date)
                    </td>

                </tr>
            }

        </table>



        
        </div>

}
