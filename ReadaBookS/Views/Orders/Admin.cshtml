@model IEnumerable<ReadaBookS.Models.Order>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px; margin-bottom: 300px;">


    <h2>Manage Orders</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user_email)
            </th>
            <th>
                <b>Book Name</b>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End_date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.user_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.o_BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.day)
                </td>
                <td style="color: limegreen;">
                    @Html.DisplayFor(modelItem => item.Start_date)
                </td>
                <td style="color: red;">
                    @Html.DisplayFor(modelItem => item.End_date)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Order_id }, new { @class = "btn btn-warning"})*@
                    @Html.ActionLink("Details", "Details", new { id = item.Order_id }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Order_id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>