    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <!-- Map -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/card.css">



</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg py-3 fixed-top">
        <div class="container">
            <a href="#" class="navbar-brand">
                <img width="50px" src=@Url.Content("~/Content/images/logo.png") />
            </a>

            <button class="navbar-toggler bg-primary" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Search input -->
            @using (Html.BeginForm("Index", "Books", FormMethod.Post))
            {
                <div class="input-group news-input" style="margin-left: 10%; width: 100%;">

                    @*<input type="text" class="form-control" placeholder="Search" aria-label="Recipient's username" aria-describedby="button-addon2">*@
                    @Html.TextBox("searchString", null, new { @class = "form-control" })
                    <input type="submit" value="Search" class="btn btn-primary" />
                    
                </div>
            }


                <div class="collapse navbar-collapse" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            // loggedIn
                            if (User.Identity.GetUserName() == "admin1@gmail.com")
                            {
                                // Admin loggedin
                                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-nav navbarjs1" })</li>
                                <!--<Name>,<File>,<Folder>-->
                                @*<li class="nav-item">@Html.ActionLink("Manage books", "Admin", "Books", null, new { @class = "nav-link text-nav navbarjs2" })</li>*@
                                @*<li class="nav-item">@Html.ActionLink("Contact", "#", "#", null, new { @class = "nav-link text-nav navbarjs3" })</li>*@
                            }
                            else
                            {
                                // User loggedin
                                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-nav navbarjs1" })</li>
                                <!--<Name>,<File>,<Folder>-->
                                <li class="nav-item">@Html.ActionLink("Books", "Index", "Books", null, new { @class = "nav-link text-nav navbarjs2" })</li>
                                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link text-nav navbarjs3" })</li>
                            }
                        }
                        else
                        {
                            //Not login
                            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-nav navbarjs1" })</li>
                            <!--<Name>,<File>,<Folder>-->
                            <li class="nav-item">@Html.ActionLink("Books", "Register", "Account", null, new { @class = "nav-link text-nav navbarjs2" })</li>
                            <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link text-nav navbarjs3" })</li>

                        }
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>


            </div>
    </nav>

    @RenderBody()


    <!-- footer -->
    <div class="p-4 bg-dark text-white text-center position-relative">
        <section class="social mb-5">
            <div class="container text-center">
                <ul>
                    <li>
                        <a href="https://www.facebook.com/profile.php?id=100003660353683" target="_blank"><img src="https://img.icons8.com/color/48/000000/facebook-circled--v5.png" /></a>
                    </li>
                    <li>
                        <a href="https://github.com/Nattapongnani" target="_blank"><img src="https://img.icons8.com/fluency/48/000000/github.png" /></a>
                    </li>
                    <li>
                        <a href="https://twitter.com/JUDE00010" target="_blank"><img src="https://img.icons8.com/color/48/000000/twitter--v1.png" /></a>
                    </li>
                </ul>
            </div>
        </section>
        <a href="#" class="position-absolute bottom-0 end-0 p-5">
            <i class="bi bi-arrow-up-circle h1"></i>
        </a>
        <footer class="bg-dark text-white text-center">
            <p class="lead">SUT WebApp &copy; 214321</p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

    <script src="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.js"></script>
    <script src="~/Content/js/index.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>









